{
  "devDependencies": {
    "@types/node": "20.8.2",
    "gts": "^5.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "typescript": "~5.2.0"
  },
  "scripts": {
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "husky install",
    "pretest": "npm.cmd run compile",
    "posttest": "npm.cmd run lint",
    "fix-and-check": "npm run fix & npm run lint"
  },
  "lint-staged": { "*.{js,ts}": "npm run fix-and-check" }
}
